<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:background="#00376A"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="4">

        <Button
            android:id="@+id/top2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="38dp"
            android:layout_weight="1"
            android:background="@drawable/buttonback"
            android:onClick="gotobolgeler"
            android:text="En Çok İhlal Yapan Bölgeler"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <Button
            android:id="@+id/top3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="38dp"
            android:layout_weight="1"
            android:background="@drawable/buttonback"
            android:onClick="gotoplakalar"
            android:text="En Çok İhlal Yapan Araçlar"

            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bildirilenler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="19dp"

            android:layout_weight="1"
            android:background="@drawable/buttonback"
            android:onClick="gotoBildirilenler"
            android:text="Bildirilen İhlaller"

            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bildir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="25dp"
            android:layout_weight="1"
            android:background="@drawable/buttonback"
            android:onClick="ifsabildir"
            android:text="İhlal Bildir"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>